{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2018",
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vite/client"],
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "exclude": ["dist", "node_modules"]
}
